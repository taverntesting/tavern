load("@rules_python//python:defs.bzl", "py_binary", "py_library")
load("@rules_oci//oci:defs.bzl", "oci_image")
load("@tavern_pip//:requirements.bzl", "requirement")

oci_image(
    name = "py3_base_image",
    base = "@py3_debug_image_base//image",
    env = {
        "PYTHONUNBUFFERED": "0",
        "FLASK_DEBUG": "1",
    },
    visibility = ["//:__subpackages__"],
)

exports_files([
    "integration_main.py",
    "pytest_main.py",
    "docker-compose.yaml",
])

py_library(
    name = "bazel",
    srcs = [
        "__init__.py",
        "load_image.py",
        "pytest_main.py",
    ],
    imports = [".."],
    visibility = [
        "//bazel:__pkg__",
        "//example:__subpackages__",
        "//tests:__subpackages__",
    ],
    deps = [
        requirement("docker"),
        requirement("pytest"),
    ],
)

